<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <!-- 相当于padding -->
            <item>
                <shape>
                    <solid android:color="#fbe970" />
                    <corners android:radius="1dp" />
                    <stroke android:width="1dp" android:color="@android:color/white" android:dashGap="1dp" android:dashWidth="1dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="false">
        <layer-list>
            <!--
            SHADOW LAYER
            <item >
                <shape>
                    <solid android:color="#66000000" />
                    <corners android:radius="3dp"/>
                </shape>
            </item>
            -->
            <!-- CONTENT LAYER -->
            <!-- 相当于padding -->
            <item>
                <shape>
                    <solid android:color="#ffffff" />
                    <corners android:radius="1dp" />
                    <stroke android:width="1dp" android:color="@android:color/white" android:dashGap="1dp" />
                </shape>
            </item>
        </layer-list>
    </item>


</selector>