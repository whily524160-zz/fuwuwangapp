<?xml version= "1.0" encoding= "utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list>
            <!-- 相当于padding -->
            <item>
               <shape android:shape="rectangle">
                    <!-- 圆角 -->
                    <corners android:radius="0dp" />
                    <!-- 填充 -->
                     <solid android:color="#fbe970"/>
 					<!-- 填充的颜色 -->
                    <!-- 描边 -->
                     <stroke android:dashGap="1dp" android:dashWidth="1dp"   android:width="1dp" android:color="@android:color/white" />
                    <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
                </shape>
            </item>
        </layer-list>
     </item>
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <!-- 圆角 -->
                    <corners android:radius="0dp" />
                    <!-- 填充 -->
                    <solid android:color="@android:color/white" />
 					<!-- 填充的颜色 -->
                    <!-- 描边 -->
                    <stroke android:dashGap="0dp" android:width="1dp" android:color="@color/background_color" />
                    <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
                </shape>
                
           </item>
        </layer-list>
    </item>
</selector>